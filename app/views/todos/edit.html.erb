<% provide(:title, 'Edit Todo') %>

<div class="wrapper">
  <div class="main">
    <div class="section section-nude">
      <div class="container">

        <p>&nbsp;</p>
        <%= render partial: "shared/error_messages", locals: {object: @todo} %>

        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
          <h3 class="title-uppercase">Edit Todo</h3>

          <%= render 'form' %>

          <p><%= link_to "Skip", todo_skip_path(@todo), method: :put, class: 'btn btn-simple btn-info btn-fill btn-block' %></p>
          <p>&nbsp;</p>
          <%= link_to 'Back to list', today_path %>

        </div>


      </div>
    </div>
  </div>
</div>

